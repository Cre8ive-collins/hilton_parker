<script>
  $(document).ready( () => {
    $('.item-2').hide()
    $('.item-3').hide()
    $('#input-error-message').hide()
    $('#eror-message').hide()
    $('.add-another').addClass('disabled')

    $("#file").change(function () {
      $('.add-another').removeClass('disabled')
      $('#file').removeClass('is-invalid').addClass('is-valid')
      $('#input-error-message').hide(300)
        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        if ($.inArray($(this).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
            $('.add-another').addClass('disabled')
            $('#file').addClass('is-invalid')
            $('#input-error-message').show(300)
        }
    });

    $("#file2").change(function () {
      $('.add-another').removeClass('disabled')
      $('#file').removeClass('is-invalid').addClass(' is-valid')
      $('#input-error-message').hide(300)
        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        if ($.inArray($(this).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
            $('.add-another').addClass('disabled')
            $('#file').addClass(' is-invalid')
            $('#input-error-message').show(300)
        }
    });

    $("#file3").change(function () {
      $('.add-another').removeClass('disabled')
      $('#file').removeClass('is-invalid').addClass('is-valid')
      $('#input-error-message').hide(300)
        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        if ($.inArray($(this).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
            $('.add-another').addClass('disabled')
            $('#file').addClass('is-invalid')
            $('#input-error-message').show(300)
        }
    });
    $('.add-another').click( function(){
      var count = document.getElementById('count').innerHTML
      count = parseInt(count)
      if(count > 0){
        if(count == 3){
          console.log(count)
          $('.item-1').hide(500, function() {
            $('.item-2').show(500)
            $('.add-another').addClass('disabled')
            count = count -1
            console.log(count)
            document.getElementById('count').innerHTML = count 
          })
          
        }else if(count == 2){
          console.log(count)
          $('.item-2').hide(500, function() {
            $('.item-3').show(500)

            $('.add-another').addClass('disabled')
            count = count -1
            console.log(count)
            document.getElementById('count').innerHTML = count 
          })
        }else if(count == 1){
          console.log(count)
          $('#eror-message').show(500)
          $('.add-another').addClass('disabled')
        }
      }
    } )
  } )
    
    
</script>

        <main>
            

<div class="container m-container">
    <div class="text-center">
        <% if (message) { %>
            <% for (var key in message) { %>
              <!-- alert message -->
              <div class="alert alert-<%= key%> alert-dismissible fade show alert-box" role="alert">
                  <strong class="text-right"><%= message[key] %>!</strong>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
          <% } %>
        <% } %> 
        <hr>
        <div class="text-center color" > <h5>APPLICATION</h5> </div>
        <span>Please provide valid information</span>
    </div>
    <hr>
    <div class="row">
        <form action="/agent/newclient" method="POST" enctype="multipart/form-data">  
            <div class="row">
                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">SURNAME</label>
                            <div class="input-group mb-4">
                                <input type="text" class="form-control" aria-label="name"  name="lastname" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">FIRSTNAME</label>
                            <div class="input-group mb-4">
                                <input type="text"     class="form-control" aria-label="name" name="firstname"  required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">OTHERNAME</label>
                            <div class="input-group mb-4">
                                <input type="text"     class="form-control" name="othername" > 
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- adress and date of birth -->
            <div class="row">
                <div class="col-md-8 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">ADDRESS</label>
                            <div class="input-group mb-4">
                                <input type="text"     class="form-control" aria-label="Address"  name='address' required  >
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">DATE OF BIRTH</label>
                            <div class="input-group mb-4">
                                <input type="date"   name="dateofbirth"  class="form-control" aria-label="date of birth"  required >
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- email/phone/place of birth -->
            <div class="row">
                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">EMAIL</label>
                            <div class="input-group mb-4">
                                <input type="text" name="email"    class="form-control" aria-label="Email" required >
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">PHONE NUMBER</label>
                            <div class="input-group mb-4">
                                <input type="text"  name="phonenumber"   class="form-control" aria-label="Phone number" required >
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">PLACE OF BIRTH</label>
                            <div class="input-group mb-4">
                                <input type="text"  name="placeofbirth"  class="form-control" aria-label="Place of birth"  required > 
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-4 col-12">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">GENDER</label>
                            <div class="input-group mb-4">
                                <select class="form-select" aria-label="Default select example" name="gender" required > 
                                            <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">Marital status</label>
                            <div class="input-group mb-4">
                                <select class="form-select" aria-label="Default select example" name="maritalstatus" required>
                                    <option value="single">Single</option>
                                    <option value="married">Married</option>
                                    <option value="divorced">Divorced</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-field">
                        <div>
                            <label for="" class="form-label">Program</label>
                            <div class="input-group mb-4">
                                <select class="form-select program" name="program" required>
                                    <option value="none">Select your program</option>
                                    <option value="bsc">Bsc / Certificate Program</option>
                                    <option value="msc">Msc</option>
                                    <option value="pgd">PGD</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-12">
                <div class="input-field">
                    <div>
                        <label for="" class="form-label">Agent id <small class="text-danger">(Do not change Agent ID)</small></label>
                        <div class="input-group mb-4">
                            <input type="text"  name="agentid"  class="form-control" aria-label="Place of birth"  required  value="<%= agent.agent_id %>"> 
                        </div>
                    </div>
                </div>
                </div>
           


            
            
            <div class="d-flex">
                <div class="submit-btn">
                    <button type="submit">Next</button>
                </div>
            </div>
        </form>
    </div>
</div>

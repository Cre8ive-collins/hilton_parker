                      <input type="text" name="firstname" class="form-control mt-3" placeholder="First Name" value="" required/>
                    </div>
                    <div class="col-md-6">
                      <input type="text" name="lastname" class="form-control mt-3" placeholder="Last Name" value="" required/>
